<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="cupnoodles.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:cupnoodles"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0.0" Color="#FF0A1931" />
                <GradientStop Offset="1.0" Color="#FF183A5A" />
            </LinearGradientBrush>
        </Grid.Background>

        <Border
            Width="380"
            Height="580"
            Padding="40"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{ThemeResource SystemControlAcrylicWindowBrush}"
            CornerRadius="12">

            <Border.Shadow>
                <ThemeShadow />
            </Border.Shadow>

            <StackPanel VerticalAlignment="Center" Spacing="16">
                <Image
                    Width="80"
                    Height="80"
                    Margin="0,0,0,10"
                    Source="/Assets/logo.png" />

                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="28"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                    Text="Willkommen zurÃ¼ck" />

                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    FontWeight="Normal"
                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                    Text="Bitte melden Sie sich an, um fortzufahren." />

                <TextBox
                    x:Name="UsernameTextBox"
                    Padding="12,10"
                    CornerRadius="8"
                    FontSize="14"
                    PlaceholderText="Benutzername oder E-Mail" />

                <PasswordBox
                    x:Name="PasswordBox"
                    Padding="12,10"
                    CornerRadius="8"
                    FontSize="14"
                    PlaceholderText="Passwort" />

                <Button
                    x:Name="LoginButton"
                    Margin="0,10,0,0"
                    Padding="0,10"
                    HorizontalAlignment="Stretch"
                    Click="LoginButton_Click"
                    Content="Anmelden"
                    CornerRadius="8"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Style="{ThemeResource AccentButtonStyle}" />

                <Button
                    x:Name="RegisterButton"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Click="RegisterButton_Click"
                    Content="Noch kein Konto? Jetzt registrieren" />

                <TextBlock
                    x:Name="ErrorTextBlock"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    Foreground="{ThemeResource SystemControlErrorTextForegroundBrush}" />
            </StackPanel>
        </Border>
    </Grid>
</Page>